<div class="block-edutrader">
    <p>{{#str}} yourcredit, block_edutrader, { "credit": {{#quote}}{{credit}}{{/quote}} }{{/str}}</p>
    {{#hassessions}}
        <p>{{#str}} proceed_session, block_edutrader {{/str}}</p>
        <ul id="sessions-{{uniqid}}">
            {{#sessions}}
            <li>
                <a href="{{wwwroot}}/local/edutrader{{item}}/item/" target="_blank">
                    {{title}}
                </a>
                <span style="float: right;" class="timeleft" data-timeleft="{{timeleft}}">{{timeleft_readableshort}}</span>
            </li>
            {{/sessions}}
        </ul>
    {{/hassessions}}
    <div class="stock">
        {{#items}}{{#is_available}}
        <div class="stock-item"
            style="background-image: url({{picture}});">
            <a class="footer btn btn-block btn-secondary{{^canpurchase}} disabled{{/canpurchase}}"
                {{#canpurchase}}href="{{wwwroot}}/local/edutrader{{itemid}}/item/?courseid={{courseid}}"{{/canpurchase}}>
                <span class="title">{{title}}</span>
                <!--
                <span class="price">{{price}} FNS</span>
                <span class="duration">{{duration_human}}</span>
                -->
            </a>
        </div>
        {{/is_available}}{{/items}}
    </div>
</div>

{{#js}}
require(['block_edutrader/main'], function(main) { main.watchTimeleft('{{uniqid}}'); } );
{{/js}}
